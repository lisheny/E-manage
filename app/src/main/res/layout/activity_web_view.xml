<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anbaoxing.e_marketing.activitys.WebViewActivity">

    <com.anbaoxing.e_marketing.widget.CommonTitle
        android:id="@+id/aty_webview_commontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.anbaoxing.e_marketing.widget.CommonTitle>

    <WebView
        android:id="@+id/aty_webview_mywebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </WebView>

    <LinearLayout
        android:id="@+id/aty_webview_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/share"
            android:padding="8dp"
            android:text="分享给朋友"
            android:textColor="@color/write" />
    </LinearLayout>


</LinearLayout>
