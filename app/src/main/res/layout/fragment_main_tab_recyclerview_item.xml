<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <android.support.v7.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        app:cardBackgroundColor="@color/write"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_tab_item_imv"
                android:layout_gravity="center"
                android:src="@mipmap/user_avatar"
                android:layout_width="90dp"
                android:layout_height="70dp" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_tab_item_title"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="深圳于东退出百年fasdffaf大礼"
                    android:textColor="@color/title_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/main_tab_item_body"
                    android:textSize="@dimen/menu"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:text="深圳于东asdfafasdf 退出百年fasdffaf大礼"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/main_tab_item_send_time"
                android:padding="16dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/menu"
                android:text="刚刚发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>