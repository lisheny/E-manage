<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_recy_item_smalltimv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/user_avatar" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/news_recy_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="流量管家" />

        <TextView
            android:id="@+id/news_recy_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:text="刚刚"
            android:textColor="@color/tab_uncheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/news_recy_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="-16dp"
        android:padding="16dp"
        android:text="深圳移动推出流量百年宝"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/news_recy_item_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="-14dp"
        android:padding="2dp"
        android:text="移动大优惠，天天送不停，深圳移动推出流量百年宝深圳移动推出流量百年宝深圳移动推出流量百年宝深圳移动推出流量百年宝深圳移动推出流量百年宝"
        android:textColor="@color/tab_uncheck"
        android:textSize="@dimen/menu" />

    <ImageView
        android:id="@+id/news_recy_item_bigimv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="4dp"
        android:padding="2dp"
        android:src="@mipmap/news_img" />


</LinearLayout>