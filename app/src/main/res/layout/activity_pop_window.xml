<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anbaoxing.e_marketing.activitys.PopWindowActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/write"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:text="分享到："
                android:textSize="@dimen/title"
                android:textColor="@color/title_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/write"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/aty_share_qq"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="@dimen/menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/share_qq"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="QQ"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/aty_share_qqzone"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="@dimen/menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/share_qzone"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="QQ空间"
                    android:textColor="@color/black" />


                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="@dimen/menu"
                    android:id="@+id/aty_share_wx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/share_wc"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="微信"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="@dimen/menu"
                    android:id="@+id/aty_share_wx_timeline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/share_moment"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="朋友圈"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>
